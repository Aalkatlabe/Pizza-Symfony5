{% extends 'basePizza.html.twig' %}
{% block title %}
{{ title }}
{% endblock %}




{% block body %}
	<div class="container my-3 mb-5">
		<div class="col-lg-2 text-center bg-light my-3" style="margin:auto;border-top: 2px groove black;border-bottom: 2px groove black;">
			<h2 class="text-center">Menu
			</h2>
		</div>
		<div class="row">
			{% for index, category in categories %}
				<div class="col-xs-3 col-sm-3 col-md-3">
					<div class="card" style="width: 18rem;">
						<img src="{{ asset(category.image)}}" class="card-img-top" alt="image for this category" width="249px" height="270px">
						<div class="card-body">
							<h5 class="card-title">
								<a href="#">{{ category.name }}</a>
							</h5>
							<p class="card-text">Bekijk de lekkerste pizza's bij deze categorie
							</p>
							<a href="{{ path('show_category',{id: category.id}) }}" class="btn btn-primary">View All</a>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>
{% endblock %}
